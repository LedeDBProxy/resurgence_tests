#  测试用例的目的：
#      当从库崩溃后，测试系统是否支持能够正常读写操作


#set up parametes
let $ip= $PROXY_HOST;
let $admin_ip= $PROXY_HOST;
let $port= $PROXY_PORT;
let $admin_port= $PROXY_ADMIN_PORT;
let $user= $MYSQL_USER;
let $pwd= $MYSQL_PASSWORD;
let $proxy_admin_pwd= $PROXY_ADMIN_PASSWORD;
let $default_port= $DEFAULT_DB;

temp_disable_ps_protocol;

#create connection for administration
connect (conn0,$admin_ip,$user,$proxy_admin_pwd,,$admin_port); 
eval select conn_num from backends where backend_ndx = 1 and user = "$user";

enable_ps_protocol;

#create connection for test
connect (conn1,$ip,$user,$pwd,$default_port,$port); 
connect (conn2,$ip,$user,$pwd,$default_port,$port); 
connect (conn3,$ip,$user,$pwd,$default_port,$port); 
connect (conn4,$ip,$user,$pwd,$default_port,$port); 
connect (conn5,$ip,$user,$pwd,$default_port,$port); 

real_sleep 2;
#start test
connection conn1;
update user set data="Hello world" where id = 1;
update user set data="jyywb" where id = 2;

connection conn2;
SELECT data from user where id = 2;


connection conn3;
SELECT data from user where id = 3;

connection conn4;
SELECT data from user where id = 4;

connection conn5;
SELECT data from user where id = 5;

connect (conn6,$ip,$user,$pwd,$default_port,$port); 
SELECT data from user where id = 6;

connect (conn7,$ip,$user,$pwd,$default_port,$port); 
SELECT data from user where id = 7;

connect (conn8,$ip,$user,$pwd,$default_port,$port); 
SELECT data from user where id = 8;

connect (conn9,$ip,$user,$pwd,$default_port,$port); 
SELECT data from user where id = 9;

connect (conn10,$ip,$user,$pwd,$default_port,$port); 
SELECT data from user where id = 10;

temp_disable_ps_protocol;

real_sleep 0.5;

connection conn0;
eval select conn_num from backends where backend_ndx = 1 and user = "$user";
eval select conn_num from backends where backend_ndx = 2 and user = "$user";

update backends set state = "maintaining" where backend_ndx = 2;

enable_ps_protocol;
connect (conn11,$ip,$user,$pwd,$default_port,$port); 
SELECT data from user where id = 11;

real_sleep 0.5;
connection conn10;
--error 1105
SELECT data from user where id = 2;

disconnect conn7;
real_sleep 0.5;

temp_disable_ps_protocol;
connection conn0;
eval select conn_num from backends where backend_ndx = 1 and user = "$user";
eval select conn_num from backends where backend_ndx = 2 and user = "$user";

enable_ps_protocol;
connection conn10;
SELECT data from user where id = 2;

temp_disable_ps_protocol;
real_sleep 0.5;
connection conn0;
eval select conn_num from backends where backend_ndx = 1 and user = "$user";
eval select conn_num from backends where backend_ndx = 2 and user = "$user";

disconnect conn0;
